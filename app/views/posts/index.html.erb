<div class="container">
	<div class="row">
		<div class="col-sm-6">
			<h1>Post list</h1>
			<div class="list-group-">
				<% for post in @posts %>
					<div class="list-group-item">
					  <a href="/posts/<%= post.id.to_s %>" class="list-group-item">
					    <h4 class="list-group-item-heading"><%= post.title %></h4>					   
					    <p class="list-group-item-text"><%= post.body %> </p>
					    <div class="small text-info"> created <%= time_ago_in_words post.created_at %> ago</div>
					  </a>
					</div>		
				<% end %>
			</div>	
		</div>
		<div class="row">
			<div class="col-sm-6">
			  	<%= form_for(@post) do |f| %>
				<%= f.hidden_field :user_id, :value => current_user.id %>
				<h2>Create new post</h2>
					<!-- Text input-->
					<div class="form-group">
					 <div class="col-md-4"><%= f.label :title %></div>
					 <div class="col-md-8">					  		
							<%= f.text_field :title, class: 'form-control input-md', :required => true %>		    
					  </div>
					</div>
					<!-- Textarea -->
					<div class="form-group">
					  <div class="col-md-4"><%= f.label :body %></div>
					  <div class="col-md-8">                     					    	
							<%= f.text_field :body, class: 'form-control', :required => true %>
					  </div>
					</div>
					<div class="form-group">
						<div class="col-md-8">                     
                    		<%= f.submit "Create post", class: "btn btn-primary" %>
                    	</div>
                    </div>	
            	<% end %>
			</div>
		</div>
	</div>
</div>